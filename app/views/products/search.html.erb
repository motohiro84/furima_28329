<% content_for(:body_attributes) do %>
    data-turbolinks="true"
<% end %>

<%= render "shared/header" %>
<div class='main'>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>検索結果一覧</h2>
    <%= link_to "#", class: "subtitle" do %>
    「<%= @keyword %>」」<span>の検索結果</span>
    <% end %>

    <% if @products != nil %>

    <ul class='item-lists'>
    <% @products.each do |product| %>
      
      <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <li class='list'>
        <%= link_to product_path(product.id) do %>
        <div class='item-img-content'>
          <%= image_tag product.images[0], class: "item-img" %>

          <%# 商品が売れていればsold outの表示 %>
          <% if Order.find_by(product_id: product.id) %>
          <div class='sold-out'>
            <span>Sold Out!!</span>
          </div>
          <% end %>
          <%# //商品が売れていればsold outの表示 %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= product.title %>
          </h3>
          <div class='item-price'>
            <span><%= product.price %>円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <% end %>
    <% end %>

      <%# 商品がない場合のダミー %>
      <%# 商品がある場合は表示されないようにしましょう %>
      <% if @products == nil || @products == [] %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            条件に合う商品がありません
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <%# //商品がある場合は表示されないようにしましょう %>
      <%# //商品がない場合のダミー %>
    </ul>
  </div>
  <%# //商品一覧 %>
</div>
<div class='purchase-btn'>
  <span class='purchase-btn-text'>出品する</span>
    <%= link_to new_product_path do %>
      <%= image_tag 'camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
    <% end %>
</div>
<%= render "shared/second-footer.html" %>