<% content_for(:body_attributes) do %>
    data-turbolinks="true"
<% end %>

<%= render "shared/second-header"%>

<%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <div class='btn-str'>アカウントをお持ちでない方はこちら</div>
    <div class='form-btn-text'>
      <%= link_to '新規登録', register_users_path, class: "btn-register", method: :get %>
    </div>
  </div>
  <div class='log-in-btn'>
  
    <%= link_to user_facebook_omniauth_authorize_path, class: "btn-facebook", method: :post do %>
      <i class="fab fa-facebook-square"></i>Facebookでログイン
    <% end %>

    <%= link_to user_yahoojp_omniauth_authorize_path, class: "btn-yahoo", method: :post do %>
      <%= image_tag 'yahoo.png', size: '25x25' ,class: "yahoo-btn-icon" %>Yahooで登録
    <% end %>
     
    <%= link_to  user_google_oauth2_omniauth_authorize_path, class: "btn-google", method: :post do %>
        <%= image_tag 'google.jpg', size: '40x40' ,class: "google-btn-icon" %>Googleでログイン
       <% end %>
    
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>